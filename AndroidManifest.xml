<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="free.yhc.feeder"
      android:versionCode="46"
      android:versionName="2.4.0">
    <uses-sdk android:minSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:name="free.yhc.feeder.FeederApp">
        <activity android:name=".FeederActivity"
                  android:configChanges="orientation|screenSize|keyboardHidden"
                  android:theme="@android:style/Theme.NoTitleBar"
                  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ChannelListActivity"
                  android:configChanges="orientation|screenSize|keyboardHidden"
                  android:theme="@style/FeederTabTheme"
                  />
        <activity android:name=".ItemListActivity"
                  android:configChanges="orientation|screenSize|keyboardHidden"
                  />
        <activity android:name=".PredefinedChannelActivity"
                  android:configChanges="orientation|screenSize|keyboardHidden"
                  android:theme="@android:style/Theme.NoTitleBar"
                  />
        <activity android:name=".ChannelSettingActivity"
                  android:configChanges="orientation|screenSize|keyboardHidden"
                  />
        <activity android:name=".FeederPreferenceActivity"
                  android:configChanges="orientation|screenSize|keyboardHidden"
                  android:theme="@android:style/Theme.NoTitleBar"
                  />
        <activity android:name=".ItemViewActivity"
                  android:configChanges="orientation|screenSize|keyboardHidden"
                  android:theme="@android:style/Theme.NoTitleBar"
                  />
        <activity android:name=".DBManagerActivity"
                  android:configChanges="orientation|screenSize|keyboardHidden"
                  android:theme="@android:style/Theme.NoTitleBar"
                  />
        <activity android:name=".AppWidgetCategoryChooserActivity"
                  android:configChanges="orientation|screenSize|keyboardHidden"
                  android:theme="@android:style/Theme.Dialog"
                  />
        <service android:name=".ScheduledUpdateService"
                 />
        <service android:name=".appwidget.UpdateService"
                 />
        <service android:name=".appwidget.ViewsService"
                 android:permission="android.permission.BIND_REMOTEVIEWS"
                 />
        <receiver android:name=".appwidget.Provider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_DELETED" />
                <action android:name="android.appwidget.action.APPWIDGET_DISABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/appwidget_info" />
        </receiver>
        <receiver android:name=".ScheduledUpdateService$AlarmReceiver">
            <intent-filter>
                <action android:name="feeder.intent.action.SCHEDULED_UPDATE" />
            </intent-filter>
        </receiver>
        <receiver android:name=".ScheduledUpdateService$DateChangedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.TIME_SET" />
            </intent-filter>
        </receiver>
        <receiver android:name=".NotiManager$NotiIntentReceiver">
            <intent-filter>
                <action android:name="feeder.intent.action.NOTIFICATION_DELETE" />
            </intent-filter>
        </receiver>
        <receiver android:name=".appwidget.ViewsService$ListPendingIntentReceiver">
            <intent-filter>
                <action android:name="feeder.intent.action.LIST_PENDING_INTENT" />
            </intent-filter>
        </receiver>
    </application>
</manifest>